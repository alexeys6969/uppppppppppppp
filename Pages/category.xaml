<Page x:Class="up.Pages.Category"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:up.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Category" Background="White">

    <Grid>
        <Grid Background="DarkOrange" VerticalAlignment="Top">
            <Label Foreground="White" x:Name="navName" Content="Категории товаров" Margin="0,10,0,10" FontFamily="Malgun Gothic" FontSize="30" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        </Grid>
        <Grid>
            <DataGrid x:Name="categoriesDataGrid" Margin="20,80,20,20" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" SelectionMode="Single" IsReadOnly="True" GridLinesVisibility="Horizontal" RowBackground="White" AlternatingRowBackground="LightGray">
                <DataGrid.Columns>
                    <!-- Столбец для Id -->
                    <DataGridTextColumn Header="ID" 
                                    Binding="{Binding Id}" 
                                    Width="Auto" 
                                    FontWeight="Bold"/>

                    <!-- Столбец для Name -->
                    <DataGridTextColumn Header="Название категории" 
                                    Binding="{Binding Name}" 
                                    Width="2*"/>
                    <!-- Займет 2 доли от доступного пространства -->

                    <!-- Столбец для Description -->
                    <DataGridTextColumn Header="Описание" 
                                    Binding="{Binding Description}" 
                                    Width="3*"/>
                    <!-- Займет 3 доли от доступного пространства -->
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Page>
