<Page x:Class="up.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:up.Pages"
      mc:Ignorable="d" d:Width="800" d:Height="450"
      Title="Authorization" Background="White">

    <Grid>
        <Grid Background="DarkOrange" VerticalAlignment="Top">
            <Label Foreground="White" Content="Авторизация" Margin="0,10,0,10" FontFamily="Malgun Gothic" FontSize="30" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        </Grid>
        <Grid Margin="0,70,0,0">
            <StackPanel Margin="25,0,25,0">
                <Label Content="Логин" FontFamily="Malgun Gothic" FontSize="18" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,10,0,0" Height="35" />
                <TextBox Style="{StaticResource RoundedTextbox}" x:Name="login" FontFamily="Malgun Gothic" FontSize="18" VerticalContentAlignment="Center" Margin="0,0,0,0" Height="25"/>

                <Label Content="Пароль" FontFamily="Malgun Gothic" FontSize="18" HorizontalAlignment="Left" Margin="0,20,0,0" Height="35"/>
                <PasswordBox Style="{StaticResource RoundedPasswordbox}" x:Name="password" FontFamily="Malgun Gothic" VerticalContentAlignment="Center" Margin="0,0,0,0" Height="25"/>

                <Button IsDefault="True" Style="{StaticResource RoundedButtonStyle}" Content="Авторизоваться" Click="authorization" HorizontalAlignment="Center" Margin="0,25,0,0" Height="25" Width="424"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
