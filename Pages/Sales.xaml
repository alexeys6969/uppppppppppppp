<Page x:Class="up.Pages.Sales"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:up.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Sales" Background="White">

    <Grid>
        <Grid Background="DarkOrange" VerticalAlignment="Top">
            <Button Content="Вернуться" Click="Back" Style="{StaticResource RoundedButtonStyle}"  Background="White" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Height="25" Width="100"/>
            <Label Foreground="White" x:Name="navName" Content="Продажи" Margin="0,10,0,10" FontFamily="Malgun Gothic" FontSize="30" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        </Grid>
        <Grid>

            <DataGrid AlternationCount="1" x:Name="salesDataGrid" Margin="20,80,20,52" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True" SelectionMode="Single" GridLinesVisibility="Horizontal" RowBackground="White" AlternatingRowBackground="LightGray">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Номер" Binding="{Binding SaleNumber}" Width="1*"/>
                    <DataGridTextColumn Header="Сотрудник" Binding="{Binding EmployeeName}" Width="1*"/>
                    <DataGridTextColumn Header="Дата" Binding="{Binding SaleDate}" Width="1*"/>
                    <DataGridTextColumn Header="Сумма" Binding="{Binding TotalAmount}" Width="1*"/>
                    <DataGridTextColumn Header="Статус оплаты" Binding="{Binding PaymentStatus}" Width="1*"/>
                    <DataGridTextColumn Header="Способ оплаты" Binding="{Binding PaymentMethod}" Width="1*"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="Применить изменения" Click="AcceptChange" Style="{StaticResource RoundedButtonStyle}" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20,0,0,10" Height="25" Width="139"/>
        </Grid>
    </Grid>
</Page>
